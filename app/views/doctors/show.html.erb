<h1>Doctor: <%= @doctor.name %></h1>

<p>Specialty: <%= @doctor.specialty %></p>
<p>Education: <%= @doctor.university %></p>
<p>Hospital: <%= @doctor.hospital.name %></p>


<h2>Patients: </h2>
<% @doctor.patients.each do |patient| %>
  <section id="patient-<%= patient.id %>">
    <p><%= patient.name %></p>
    <%= link_to "Remove", "/doctors/#{@doctor.id}/#{patient.id}/edit", method: :patch %>
  </section>
<% end %>
